<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:innerRadius="0dp"
        android:thicknessRatio="1.9">
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:id="@+id/UpcomingName"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:text="Abishek Singh" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/upcomingabout"
                    android:textStyle="bold"
                    android:layout_below="@id/UpcomingName"
                    android:layout_marginStart="20dp"
                    android:layout_marginBottom="20dp"
                    />

                <ImageView
                    android:id="@+id/UpcomingDelete"
                    android:layout_width="20dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="20dp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/delete_black_24dp" />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="30dp"
                android:orientation="horizontal"
                android:weightSum="2"
                >

                <ImageButton
                    android:id="@+id/whatsaapbtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:layout_marginEnd="30dp"
                    android:src="@drawable/whatsapp"
                    android:background="@drawable/buttonback"
                    android:layout_weight="1"
                    />
                <ImageButton
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="40dp"
                    android:src="@drawable/call_blue_24dp"
                    android:background="@drawable/buttonback"
                    android:layout_height="wrap_content"
                    android:id="@+id/Phonebtn"
                    />
            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>